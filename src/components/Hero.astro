---
interface Props {
  title: string;
  subtitle: string;
  ctaText?: string;
  ctaLink?: string;
  secondaryCtaText?: string;
  secondaryCtaLink?: string;
  image?: string;
}

const {
  title,
  subtitle,
  ctaText = "Comenzar",
  ctaLink = "#cotizador",
  secondaryCtaText,
  secondaryCtaLink,
  image = "/hero-image.jpg",
} = Astro.props;
---

<section
  class="relative bg-gradient-to-r from-blue-900 to-blue-700 text-white py-16 md:py-24 overflow-hidden"
>
  <!-- Overlay de imagen con opacidad -->
  <div class="absolute inset-0 bg-blue-900 opacity-90 z-0"></div>

  <!-- PatrÃ³n decorativo -->
  <div class="absolute inset-0 z-0 opacity-10">
    <svg xmlns="http://www.w3.org/2000/svg" width="100%" height="100%">
      <defs>
        <pattern id="grid" width="40" height="40" patternUnits="userSpaceOnUse">
          <path
            d="M 40 0 L 0 0 0 40"
            fill="none"
            stroke="white"
            stroke-width="1"></path>
        </pattern>
      </defs>
      <rect width="100%" height="100%" fill="url(#grid)"></rect>
    </svg>
  </div>

  <div class="container mx-auto px-4 relative z-10">
    <div class="flex flex-col md:flex-row items-center">
      <div class="md:w-1/2 mb-10 md:mb-0">
        <h1 class="text-4xl md:text-5xl font-bold mb-4 leading-tight">
          {title}
        </h1>
        <p class="text-xl text-blue-100 mb-8 max-w-lg">
          {subtitle}
        </p>

        <div class="flex flex-wrap gap-4">
          <a
            href={ctaLink}
            class="bg-white text-blue-800 hover:bg-blue-50 px-6 py-3 rounded-lg font-medium shadow-lg transition-all transform hover:-translate-y-1"
          >
            {ctaText}
          </a>

          {
            secondaryCtaText && secondaryCtaLink && (
              <a
                href={secondaryCtaLink}
                class="bg-transparent border-2 border-white text-white hover:bg-white hover:text-blue-800 px-6 py-3 rounded-lg font-medium transition-colors"
              >
                {secondaryCtaText}
              </a>
            )
          }
        </div>
      </div>

      <div class="md:w-1/2 flex justify-center">
        <div class="relative w-full max-w-md">
          <!-- Elemento decorativo -->
          <div
            class="absolute -top-6 -left-6 w-24 h-24 bg-blue-500 rounded-full opacity-20"
          >
          </div>

          <!-- Imagen principal -->
          <div
            class="relative z-10 bg-white p-2 rounded-lg shadow-2xl transform rotate-1"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="w-full h-auto"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="1"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path
                d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"
                class="text-blue-800"></path>
              <polyline points="9 22 9 12 15 12 15 22" class="text-blue-600"
              ></polyline>
              <rect
                x="3"
                y="14"
                width="18"
                height="8"
                class="text-blue-200 opacity-20"></rect>
            </svg>

            <div
              class="absolute bottom-4 right-4 bg-blue-600 text-white px-4 py-2 rounded-lg text-sm font-bold shadow-lg"
            >
              Cotizador
            </div>
          </div>

          <!-- Elemento decorativo -->
          <div
            class="absolute -bottom-4 -right-4 w-32 h-32 bg-blue-400 rounded-full opacity-20"
          >
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
