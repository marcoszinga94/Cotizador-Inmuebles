---
import Layout from "../layouts/Layout.astro";
import TasadorForm from "../components/TasadorForm";
import TablaRossHeidecke from "../components/TablaRossHeidecke";
---

<Layout title="Argensador | Tasador de Propiedades">
  <div class="flex flex-col max-w-6xl mx-auto px-4 py-8 gap-4">
    <h1 class="text-4xl font-bold mb-6 text-center text-rosaOscuro relative">
      Tasador de Propiedades
    </h1>

    <section class="bg-secondary rounded-lg shadow-lg">
      <TasadorForm client:load />
    </section>

    <section>
      <TablaRossHeidecke client:load />
    </section>
  </div>
</Layout>
