---
import Layout from "../layouts/Layout.astro";
import CotizadorForm from "../components/CotizadorForm";
import TablaRossHeidecke from "../components/TablaRossHeidecke";
---

<Layout title="Cotizador de Propiedades">
  <div class="container mx-auto px-4 py-8 gap-4">
    <section class="mb-12 text-center">
      <h1 class="text-4xl font-bold text-blue-800">Cotizador de Propiedades</h1>
      <p class="text-lg text-gray-600 max-w-3xl mx-auto">
        Herramienta profesional para la valoración de propiedades inmobiliarias
        utilizando el método de Ross-Heidecke.
      </p>
    </section>

    <div class="grid grid-cols-1 gap-10">
      <section class="bg-white rounded-lg shadow-lg">
        <h2 class="text-2xl font-bold text-blue-800 mb-6 text-center">
          Calculadora de Valoración
        </h2>
        <CotizadorForm client:load />
      </section>

      <section>
        <TablaRossHeidecke client:load />
      </section>
    </div>
  </div>
</Layout>
